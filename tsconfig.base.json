{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@new-rentals/applications": ["libs/applications/src/index.ts"],
      "@new-rentals/auth": ["libs/auth/src/index.ts"],
      "@new-rentals/layout": ["libs/layout/src/index.ts"],
      "@new-rentals/maintenance": ["libs/maintenance/src/index.ts"],
      "@new-rentals/property-listing": ["libs/property-listing/src/index.ts"],
      "@new-rentals/public-listing": ["libs/public-listing/src/index.ts"],
      "@new-rentals/shared": ["libs/shared/src/index.ts"],
      "@new-rentals/shell": ["libs/shell/src/index.ts"],
      "@new-rentals/user-management": ["libs/user-management/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
